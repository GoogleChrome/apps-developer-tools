{
  "name": "Apps Developer Tool",
  "description": "Develop and Debug Chrome apps.",
  "manifest_version": 2,
  "version": "0.1.1",
  "app": {
    "background": {
      "scripts": ["background.js"]
    },
    "content_security_policy":
        "default-src 'self'; style-src 'unsafe-inline' *; img-src *;"
  },
  "permissions": [
    "notifications",
    "management",
    "developerPrivate",
    "fileSystem"],
  "icons": {
    "16": "images/dev-icon-16.png",
    "128": "images/dev-icon-128.png"
  }
}
